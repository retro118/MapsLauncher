<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="290dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="290dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="5dp"
        android:text="Map"
        app:layout_constraintBottom_toTopOf="@+id/buttonnav"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonnav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="455dp"
        android:layout_marginEnd="290dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="290dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="11dp"
        android:text="Map for Navigation "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="435dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="124dp"></LinearLayout>
</android.support.constraint.ConstraintLayout>