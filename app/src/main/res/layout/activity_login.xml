<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <LinearLayout


        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="348dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="149dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <EditText
            android:id="@+id/editTextEmailLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Enter your Email: "
            android:inputType="textEmailAddress"


            />

        <EditText

            android:id="@+id/editTextPasswordLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:hint="Enter your password: "
            android:inputType="textPassword" />

        <Button
            android:id="@+id/buttonSignInLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Tap to Login" />

        <TextView
            android:id="@+id/textViewSignupLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="New to TRAVCO?click here to SignUp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textViewMAPS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAVIGATE TO MAIN PAGE"
            android:textAlignment="center"
            android:textSize="15dp"

            />

    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="132dp"
        android:layout_height="28dp"
        android:layout_margin="15dp"
        android:layout_marginEnd="237dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="237dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="LOGIN!!"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

</android.support.constraint.ConstraintLayout>